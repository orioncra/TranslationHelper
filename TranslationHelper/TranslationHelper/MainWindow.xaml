<Window x:Class="TranslationHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranslationHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200">
    <Grid Margin="0, 10, 15, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Height="50" Width="50" Content="Test" Click="Button_Click" Grid.Column="0" Grid.Row="0"  Margin="5"/>
        <Button Height="50" Width="50" Content="Focus 1" Click="Button_Click_1" Grid.Column="1" Grid.Row="0" Margin="5"/>
        <Button Height="50" Width="50" Content="Focus 2" Click="Button_Click_2" Grid.Column="2" Grid.Row="0" Margin="5"/>
    </Grid>
</Window>
